<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.emilianotalamo.tweetdrafter"
    versionCode = "10"
    version     = "1.0.2" >

<!-- versionCode is optional and Android only -->

  <name>tweetdrafter</name>

  <description>
      Write drafts for tweets.
  </description>

  <author href="https://github.com/EmilianoTalamo" email="emilianotalamo@gmail.com">
      Emiliano TÃ¡lamo
  </author>

  <preference name="android-minSdkVersion" value="21" />

  <platform name="android" />
  <preference name="permissions" value="none"/>
  <preference name="phonegap-version" value="cli-6.5.0" />
  <preference name="orientation" value="portrait" /> 
  <preference name="target-device" value="universal" />
  <plugin name="cordova-plugin-splashscreen" spec="https://github.com/apache/cordova-plugin-splashscreen.git" />

  <plugin name="cordova-plugin-statusbar" source="npm"/>
  <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#2196f3" />
    <preference name="StatusBarStyle" value="lightcontent" />

  <icon src="res/icon/android/icon-36-ldpi.png" platform="android" qualifier="ldpi" />
  <icon src="res/icon/android/icon-48-mdpi.png" platform="android" qualifier="mdpi" />
  <icon src="res/icon/android/icon-72-hdpi.png" platform="android" qualifier="hdpi" />
  <icon src="res/icon/android/icon-96-xhdpi.png" platform="android" qualifier="xhdpi" />
  <icon src="res/icon/android/icon-144-xxhdpi.png" platform="android" qualifier="xxhdpi" />
  <icon src="res/icon/android/icon-192-xxxhdpi.png" platform="android" qualifier="xxxhdpi" />

  <platform name="android">
    <splash src="res/screen/android/320-ldpi.png" density="port-ldpi"/>
    <splash src="res/screen/android/480-mdpi.png" density="port-mdpi"/>
    <splash src="res/screen/android/800-hdpi.png" density="port-hdpi"/>
    <splash src="res/screen/android/1280-xhdpi.png" density="port-xhdpi"/>
    <splash src="res/screen/android/1600-xxhdpi.png" density="port-xxhdpi"/>
    <splash src="res/screen/android/1920-xxxhdpi.png" density="port-xxxhdpi"/>
  </platform>

  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="SplashScreenDelay" value="3000" />
  <access />
  <plugin name="cordova-plugin-whitelist" spec="1" />

</widget>